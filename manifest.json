{
  "name": "tabby-birthday",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Tabby birthday",
  "chrome_url_overrides": {
    "newtab": "./background/index.html"
  },
  "minimum_chrome_version": "18",
  "permissions": [
    "tabs", "notifications", "storage"
  ],
   "background": {
    "scripts": ["./background/public/bundle.js"]
  },
  "content_security_policy": "script-src 'self' https://www.gstatic.com/firebasejs/3.6.4/firebase.js https://*.firebaseio.com; object-src 'self'"
}
